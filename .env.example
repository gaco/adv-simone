##################################
# Flask Configuration
##################################
# Set to 'production' for production deployment
FLASK_ENV=development

# Flask Secret Key (required for sessions and CSRF protection)
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this-in-production

# Admin User Configuration (optional - will use defaults if not set)
# These will be used to create the initial admin user
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Server Configuration (optional)
# PORT=5000
# HOST=0.0.0.0

# Debug Mode (optional - defaults to True in development)
# DEBUG=Tru

# Logging Configuration (optional)
# LOG_LEVEL=INFO
# LOG_FILE=app.log


##################################
# Database Configuration
##################################
# For development (SQLite)
DATABASE_URL=sqlite:///portfolio.db
# For production (PostgreSQL example)
# DATABASE_URL=postgresql://username:password@localhost:5432/portfolio_db


##################################
# Google Places API Configuration
##################################
# Get your API key from: https://developers.google.com/maps/documentation/places/web-service/get-api-key
GOOGLE_PLACE_ID=your-google-place-id-here
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
